<p id="notice"><%= notice %></p>

<h1>Sitters</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Years experience</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sitters.each do |sitter| %>
      <tr>
        <td><%= sitter.id %></td>
        <td><%= sitter.name %></td>
        <td><%= sitter.years_experience %></td>
        <td><%= sitter.location %></td>
        <td><%= link_to 'Show', sitter %></td>
        <td><%= link_to 'Edit', edit_sitter_path(sitter) %></td>
        <td><%= link_to 'Destroy', sitter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sitter', new_sitter_path %>
